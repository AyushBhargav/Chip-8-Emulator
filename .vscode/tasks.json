{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "c:\\windows\\sysnative\\bash.exe",
                "args": ["-c"]
            }
        }
    },
    "tasks": [
        {
            "label": "Build project on WSL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "/home/ayush/Projects/chip8/chip8.out",
                "chip8.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build to WebAssembly",
            "type": "shell",
            "command": "em++",
            "args": [
                "chip8.cpp",
                "-s",
                "WASM=1",
                "-o",
                "/home/ayush/Projects/chip8/chip8.html"
            ]
        }
    ]
}