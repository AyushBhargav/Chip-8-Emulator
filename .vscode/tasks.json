{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WASM",
            "type": "shell",
            "command": "cargo +nightly build --release --target wasm32-unknown-unknown"
        },
        {
            "label": "Copy WASM",
            "type": "shell",
            "command": "cp target/wasm32-unknown-unknown/release/chip8_emulator.wasm www/chip8.wasm"
        },
        {
            "label": "Reduce WASM size",
            "type": "shell",
            "command": "wasm-gc www/chip8.wasm www/chip8.wasm"
        },
        {
            "label": "build",
            "dependsOn": ["Build WASM", "Copy WASM", "Reduce WASM size"]
        },
        {
            "label": "Run python server",
            "type": "shell",
            "command": "python -m http.server 8000 -d ./www"
        }
    ] 
}